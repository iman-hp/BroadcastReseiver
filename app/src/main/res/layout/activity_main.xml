<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
     android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context="com.example.iman.broadcastreseiver.MainActivity">


<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:elevation="10dp"
    android:background="#131841">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broadcast Receiver"
            android:textSize="20dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="#ffffff"/>
    <ImageButton
        android:id="@+id/btn_burger_icon"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:src="@drawable/burger" />

    </LinearLayout>

</android.support.v7.widget.Toolbar>


<LinearLayout
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<Button
    android:gravity="center"
    android:id="@+id/btn_videoplayer"
    android:background="#312d2d"
    android:layout_centerInParent="true"
    android:layout_width="120dp"
    android:layout_height="70dp"
    android:textSize="18sp"
    android:layout_marginRight="20dp"
    android:textColor="#ffffff"
    android:text="Video Player" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_battery"
        android:background="#312d2d"
        android:textColor="#ffffff"
        android:textSize="18sp"

    android:layout_width="120dp"
    android:layout_height="70dp"
    android:text="Battery"
    />
</LinearLayout>

</RelativeLayout>

